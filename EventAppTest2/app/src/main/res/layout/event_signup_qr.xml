<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/AttendeeQRSignUp"
            android:layout_width="194dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="152dp"
            android:background="@drawable/roundedbuttonstyle"
            android:backgroundTint="@color/purple"
            android:drawableEnd="@drawable/ic_buttonarrow"
            android:drawablePadding="8dp"
            android:text="QR Sign in"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AttendeeQRSignInProfilePic_Event"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/AttendeeQRSignInEventImage"
            android:layout_width="0dp"
            android:layout_height="275dp"
            android:contentDescription="Event Image"
            android:src="@drawable/karansbackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/AttendeeQRSignInEventDetailName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Event Name"
            android:textSize="35sp"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AttendeeQRSignInEventImage" />

        <TextView
            android:id="@+id/AttendeeQRSignInEventDetailSubName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Welcome"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AttendeeQRSignInEventDetailName" />

        <ImageView
            android:id="@+id/AttendeeQRSignInEventDateIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AttendeeQRSignInEventDetailSubName"
            app:srcCompat="@drawable/date" />

        <TextView
            android:id="@+id/AttendeeQRSignInCalenderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:text="Day/Month/Year"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/AttendeeQRSignInEventDateIcon"
            app:layout_constraintTop_toBottomOf="@+id/AttendeeQRSignInEventDetailSubName" />

        <TextView
            android:id="@+id/AttendeeQRSignInDayTimeDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingLeft="10dp"
            android:text="Day, Time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/AttendeeQRSignInEventDateIcon"
            app:layout_constraintTop_toBottomOf="@+id/AttendeeQRSignInCalenderDate" />

        <ImageView
            android:id="@+id/AttendeeQRSignInEventLocationIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AttendeeQRSignInEventDateIcon"
            app:srcCompat="@drawable/location" />

        <TextView
            android:id="@+id/AttendeeQRSignInLocationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingLeft="10dp"
            android:text="Location Name"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/AttendeeQRSignInEventDateIcon"
            app:layout_constraintTop_toBottomOf="@+id/AttendeeQRSignInDayTimeDate" />

        <TextView
            android:id="@+id/AttendeeQRSignInEventAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingLeft="10dp"
            android:text="Address"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/AttendeeQRSignInEventLocationIcon"
            app:layout_constraintTop_toBottomOf="@+id/AttendeeQRSignInLocationName" />

        <ImageView
            android:id="@+id/AttendeeQRSignInShareIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AttendeeQRSignInEventLocationIcon"
            app:srcCompat="@drawable/share" />

        <TextView
            android:id="@+id/AttendeeQRSignInEventShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingLeft="10dp"
            android:text="Share Event"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/AttendeeQRSignInShareIcon"
            app:layout_constraintTop_toBottomOf="@+id/AttendeeQRSignInEventAddress" />

        <TextView
            android:id="@+id/AttendeeQRSignInAboutEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="About Event"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AttendeeQRSignUp" />

        <TextView
            android:id="@+id/AttendeeQRSignInEventDescription"
            android:layout_width="380dp"
            android:layout_height="27dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:text="Description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.029"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AttendeeQRSignInAboutEvent" />

        <ImageView
            android:id="@+id/AttendeeQRSignInProfilePic_Event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AttendeeQRSignInShareIcon"
            app:srcCompat="@drawable/circleprofilepic" />

        <TextView
            android:id="@+id/AttendeeSignInUsernameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="44dp"
            android:text="Charlie Kim"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/AttendeeQRSignInProfilePic_Event"
            app:layout_constraintTop_toBottomOf="@+id/AttendeeQRSignInEventShare" />

        <TextView
            android:id="@+id/AttendeeQRSignInUserType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            android:text="Attendee"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/AttendeeQRSignInProfilePic_Event"
            app:layout_constraintTop_toBottomOf="@+id/AttendeeSignInUsernameText" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>