<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/reladminlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:id="@+id/ProfilePicList"
                    android:layout_width="59dp"
                    android:layout_height="55dp"

                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/nameOnImageAttendee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:maxLength="4"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/attendeeNameList"
            android:layout_width="198dp"
            android:layout_height="29dp"
            android:text="Attendees Name"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/CheckText"
            app:layout_constraintStart_toEndOf="@+id/reladminlist"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/CheckText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/reladminlist" />

        <TextView
            android:id="@+id/CheckInCountList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/attendeeNameList"
            app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>